<UserControl x:Class="PageSelect.Views.Login.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PageSelect.Views.Login"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox
            Text="{Binding Path=Id,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
            HorizontalAlignment="Left" Height="56" Margin="124,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="298"/>
        <TextBox
            Text="{Binding Path=Password,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"            
            HorizontalAlignment="Left" Height="56" Margin="124,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="298"/>
        <Button
            Command="{Binding Path=Login}"
            Content="Login" HorizontalAlignment="Left" Margin="124,307,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="347,307,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</UserControl>
